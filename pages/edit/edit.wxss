/* pages/edit/edit.wxss */
.form{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.head{
  top: 0rpx;
  left: 0rpx;
  height: 480rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;   
  align-items: stretch; 
  text-align: center;
}

image{
  height: 400rpx;
  width: 100%;
}

.name{
  border-bottom: 1rpx solid #D9D9D9;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  text-overflow: ellipsis;
  background-color: #FFFFFF;
  padding: 10rpx 0rpx;
  height: 80rpx;
  width: 100%;
}

.body{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
}

.cell{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.property{
  flex: 1;
  display: flex;
  flex-direction: row;
  margin: 10rpx;
}

.inputBox{
  border: 1rpx solid #D9D9D9;
  background-color: #FFFFFF;
  flex: 1;
}

.expireDatePicker{
  border: 1rpx solid #D9D9D9;
  background-color: #FFFFFF;
  flex: 1;
  text-align: center;
}

.datePicker{
  position: relative;
  margin-top: 10rpx;
  background-color: #FFFFFF;
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 5rpx 0rpx;

}
.datePicker:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.datePicker:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

.datePicker_hidden{
  height: 0;
  overflow: hidden;
}
.datePicker_show{
  height: auto;
}

picker{
  border: 0rpx 1rpx solid #D9D9D9;
  background-color: #FFFFFF;
}
.commentTxt{
  padding: 10rpx;
}

.comment{
  align-self: center;
  height: 150rpx;
  border: 1rpx solid #D9D9D9;
  background-color: #FFFFFF;
  padding: 10rpx;
  margin: 0rpx 10rpx;
}

 .btn-area{
  display: flex;
  flex-direction: row;
  justify-content: center;
} 

button{
  margin: 20rpx;
}
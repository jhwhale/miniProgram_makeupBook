/* pages/edit/edit.wxss */
.form{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.top{
  border-bottom: 1rpx solid #c9e4ca;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  text-overflow: ellipsis;
  background-color: #FFFFFF;
  /* padding: 10rpx 0rpx; */
  height: 70rpx;
  width: 100%;
  color: #1b998b;
}

.middle{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 450rpx;
  /* background-color: #D9D900; */
}

image{
  margin: 10rpx 0 0 10rpx;
  width: calc(60% - 22rpx);
  height: calc(100% - 22rpx);
  border: 6rpx dashed #D9D9D9;

}

.middle_right{
  width: 40%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
} 

.property{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 0 10rpx;
  height: 25%;
}

.property_hidden{
  flex: 0;
  height: 0;
  overflow: hidden;
}
.property_show{
  height: auto;
}

.inputBox{
  border: 1rpx solid #D9D9D9;
  background-color: #FFFFFF;
}

input[disabled]{   
    border: 1px solid #DDD;   
    background-color: #F5F5F5;   
    color:#ACA899;   
}  

.bottom{
  margin-top: 32rpx;
}
.datePicker{
  position: relative;
  margin-top: 10rpx;
  background-color: #FFFFFF;
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 5rpx 0rpx;

}
.datePicker:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.datePicker:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

picker{
  border: 0rpx 1rpx solid #D9D9D9;
  background-color: #FFFFFF;
}

.commentTxt{
  padding: 16rpx;
}

.comment{
  width: calc(100% - 42rpx);
  height: 150rpx;
  border: 1rpx solid #D9D9D9;
  background-color: #FFFFFF;
  padding: 10rpx;
  margin: 0rpx 10rpx;
}

.btn-area{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
} 

button{
  margin: 20rpx;
}
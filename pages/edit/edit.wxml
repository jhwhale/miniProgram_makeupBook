<!--pages/edit/edit.wxml-->
<form class='form' bindsubmit='submit'>
  <view class='head'>
    <image src="{{imgPath}}" bindtap='chooseImg'></image> 
    <input name="name" class='name' auto-focus placeholder='产品名称' maxlength='20' value='{{name}}'></input>
  </view>

  <view class='body'>
    <view class='cell'>
      <view class='property'>
        <text>规格：</text>
        <input name="size" class='inputBox' value='{{size}}'></input>
      </view>
      <view class='property'>
        <text>色号：</text>
        <input name="color" class='inputBox' value='{{color}}'></input>
      </view>
    </view>
    <view class='cell'>
      <view class='property'>
        <text>使用期限：</text>
        <picker name='expireDate' class='expireDatePicker' range="{{expireDate}}" value='{{index}}' bindchange='expireDateChange'>
        <view>{{expireDate[index]}}</view>
        </picker>
      </view>
      <view class='property'>
        <text>价格：¥</text>
        <input name="price" class='inputBox' type="number" value='{{price}}'></input>
      </view>
    </view>

    <view class='datePicker'>
      <text>开封日期：</text>
      <picker name="openDate" mode="date" value="{{openDate}}" start="2018-01-01" end="2028-01-01" bindchange="openDateChange">
        <view>{{openDate}}</view>
      </picker>
    </view>
    
    <view class='datePicker'>
      <text>铁皮日期：</text>
      <picker name="hitpanDate" mode='date' value='{{hitpanDate}}' start="2018-01-01" end="2028-01-01" bindchange="hitpanDateChange">
        <view>{{hitpanDate}}</view>
      </picker>
    </view>
    <view class='datePicker'>
      <text>空盘日期：</text>
      <picker name="emptyDate" mode='date' value='{{emptyDate}}' start="2018-01-01" end="2028-01-01" bindchange="emptyDateChange">
        <view>{{emptyDate}}</view>
      </picker>
    </view>

    <text class="commentTxt">备注：</text>
    <textarea name="comment" class="comment" placeholder="爱写不写。。。" value='{{comment}}'/>
  </view>

   <view class="btn-area">
    <button type="primary" formType="submit" size="mini">保存</button>
    <button formType="reset" size="mini">重填</button>
    <button size="mini" bindtap='cancel'>取消</button>
  </view> 
</form>

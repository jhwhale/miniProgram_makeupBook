/* pages/test/test.wxss */
#cover-preview{
  width: 100%;
  height: 100%;
  background-color: black;
}

.mask{
  background-color: rgba(135,206,250,0.5);
}
.top{
  width: 80%;
  height: 20%;
  position: absolute;
  top: 0;
  left: 10%;
}
.left{
  width: 10%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.bottom{
  width: 80%;
  position: absolute;
  bottom: 0;
  left: 10%;
}
.right{
  width: 10%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
}

#croper-sure{
  height: 5%;
  width: 20%;
  text-align: right;
  color: green;
  font-size: 40rpx;
  position: absolute;
  bottom: 40rpx;
  right: 0;
  padding-right: 40rpx;
  text-shadow:2px 2px 4px #000000;
}

#croper-reChoose{
  height: 5%;
  width: 30%;
  text-align: center;
  color: grey;
  font-size: 40rpx;
  position: absolute;
  bottom: 40rpx;
  left: 34%;
  text-shadow:2px 2px 4px #000000;
}
#croper-cancel{
  height: 5%;
  width: 20%;
  text-align: left;
  color: grey;
  font-size: 40rpx;
  position: absolute;
  bottom: 40rpx;
  left: 0;
  padding-left: 40rpx;
  text-shadow:2px 2px 4px #000000;
}
